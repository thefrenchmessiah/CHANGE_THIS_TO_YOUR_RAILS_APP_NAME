<%= simple_form_for [@emotion, @booking, @rating] do |f| %>

  <div class="field">
    <%= f.hidden_field :booking_id, value: @booking.id %>
  </div>

  <div class="field">
    <%= f.hidden_field :emotion_id, value: @emotion.id %>
  </div>

  <div class="field">
    <%= f.input :rating, as: :float, in: (0.0..5.0), step: 0.1 %>
    <%# <%= f.number_field :rating, id: 'star-rating' %>
  </div>

  <div class="field">
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  </div>

  <div class="actions">
    <%= f.submit "Submit your rating" %>
  </div>
<% end %>

