<h1>Welcome to Intensify</h1>
<p>What emotion would you like to feel today?</p>
<div class="container text-center">
  <div class="row row-cols-3">
    <% @emotions.each do |emotion| %>
      <ul>
          <div class="col card-index">
            <h3><%= emotion.name.capitalize %></h3>
            <p><%= emotion.description %></p>
            <button><%= link_to "Book", emotion_path(emotion), class:"button-text" %></button>
          </div>
      </ul>
    <% end %>
  </div>
</div>
