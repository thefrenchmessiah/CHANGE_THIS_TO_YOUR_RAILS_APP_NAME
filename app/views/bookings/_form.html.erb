<%= simple_form_for [@emotion, @booking] do |f| %>

  <div class="field">
    <%= f.hidden_field :client_id, value: current_user.id %>
  </div>

  <div class="field">
    <%= f.hidden_field :owner_id, value: @emotion.user.id %>
  </div>

   <div class="field">
  <%= f.input :start_date,
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>
</div>
  <div class="field">
  <%= f.input :end_date,
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>
  </div>

  <div class="actions">
    <%= f.submit "Book Emotion", class: 'owner-button' %>
  </div>
<% end %>
