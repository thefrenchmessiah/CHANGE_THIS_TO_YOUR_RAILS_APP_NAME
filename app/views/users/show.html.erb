<h1><%= @user.first_name %></h1>
<h2><%= @user.last_name %></h2>
<p>Email: <%= @user.email %></p>

<%= link_to 'Delete my account', user_path(@user.id), method: :delete, data: { confirm: 'Are you sure?' } %>

<h2>Emotions</h2>
<ul>
  <% @emotions.each do |emotion| %>
    <div class="card-emotion"><%= link_to emotion.name, emotion_path(emotion) %></div>
  <% end %>
</ul>
