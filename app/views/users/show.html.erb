<div class="banner owner-details">
  <div class="owner-photo">
    <%= cl_image_tag @user.photo.key, height: 100, width: 100, crop: :fill %>
  </div>
  <div class="owner-description">
    <h1><%= @user.first_name %> <%= @user.last_name %></h1>
  </div>
</div>

<h2>Emotions</h2>
<button><%= link_to 'Share an emotion', new_emotion_path %></button>
<ul>
  <% @emotions.each do |emotion| %>
    <div class="card-emotion">
      <%= link_to emotion.name, emotion_path(emotion) %>
      <%= link_to "Delete",
          emotion_path(emotion),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
  <% end %>
</ul>

<h2>Bookings</h2>
<h3>As an owner</h3>
<ul>
  <% @owner_bookings.each do |booking| %>
    <div class="card-emotion"><%= link_to booking.emotion.name, emotion_path(booking.emotion) %></div>
  <% end %>
</ul>
<h3>As a client</h3>
<ul>
  <% @client_bookings.each do |booking| %>
    <div class="card-emotion"><%= link_to booking.emotion.name, emotion_path(booking.emotion) %></div>
    <div class="card-emotion"><%= link_to "Rate your experience", new_emotion_booking_rating_path(booking.emotion, booking) %></div>
  <% end %>
</ul>

<%= link_to "Delete my account", user_path(current_user), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
